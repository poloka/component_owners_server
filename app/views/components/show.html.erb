<div class="container-fluid">
  <h1>Component Details</h1>
  <%= form_with(model: @component, local: true) do |form| %>
  <%#= form_for([@component], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name,class:"form-control", readonly:true%>
    </div>
    <div class="form-group">
      <%= form.label :url %>
      <%= form.text_field :url,class:"form-control", readonly:true%>
    </div>
    <% if @component.user&.username %>
      <div class="form-group">
        <%= form.label :user %>
        <table class="table">
          <tbody>
          <tr>
            <td>
              <%= @component.user.username %>
            </td>
            <td>
              <%= link_to 'Show', @component.user, class:"btn btn-light min-width-btn" %>
            </td>
          </tr>
          </tbody>
        </table>
      </div>
    <% end %>
  <% end %>
  <%= link_to 'Edit', edit_component_path(@component),class:"btn btn-primary min-width-btn" %> 
  <%= link_to 'Back', components_path,class:"btn btn-light min-width-btn" %>
</div>